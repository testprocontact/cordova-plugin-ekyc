<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.fci.ekyc"
        version="0.7.0">

  <name>Ekyc</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/ekyc.js" target="js/ekyc.js"/>

  <js-module src="www/ekyc.js" name="ekyc">
    <clobbers target="ekyc" />
  </js-module>

  <platform name="android">

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="Ekyc">
        <param name="android-package" value="com.fci.plugin.Ekyc"/>
      </feature>
    </config-file>

    <source-file src="src/android/Ekyc.java" target-dir="src/com/fci/plugin/"/>
	<source-file src="src/android/ekycsdk_vuiapp_v3.7.1.6.aar" target-dir="libs/"/>
	<preference name="ANDROIDX_VERSION" default="1.0.0" />
    <preference name="ANDROIDX_APPCOMPAT_VERSION" default="1.3.1" />
	<framework custom="true" src="src/android/ekyc.gradle" type="gradleReference" />
  </platform>

  <platform name="ios">
    
    <config-file target="config.xml" parent="/widget">
      <feature name="Hello">
        <param name="ios-package" value="HWPHello" />
      </feature>
    </config-file>

    <header-file src="src/ios/HWPHello.h" target-dir="HelloPlugin"/>
    <source-file src="src/ios/HWPHello.m" target-dir="HelloPlugin"/>
  </platform>

  <platform name="wp7">
    <source-file src="src/wp7/Hello.cs"/>
  </platform>

</plugin>